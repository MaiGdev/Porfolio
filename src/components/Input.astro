---
interface Props {
  value: string;
  bg_color?: string;
  text_color?: string;
}

const { value, bg_color, text_color } = Astro.props;
---

<input
  type="text"
  value=`${value}`
  disabled
  type="text"
  id="myInput"
  class="h-[38px] bg-black/5 dark:bg-white/5 w-full py-1.5 px-3 rounded-lg grid place-items-center text-slate-600 dark:text-slate-300"
/>
