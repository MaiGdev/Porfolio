---
import React from "./icons/ReactIcon.astro"
import Tailwind from "./icons/TailwindIcon.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG logos",
    description:
      "Created from scratch with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands. Optimized for SEO and performance.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/svgl.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---



{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
        <h3 class="text-2xl text-[#8F5C23] font-bold">{title}</h3>
         <p class="text-lg text-[#384247] font-medium text-pretty">{description}</p>
    </article>
  ))
}